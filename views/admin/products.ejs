<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <h1>My Products</h1>
    <p>List of all the products...</p>
    <% if (hasProds) { %>
    <div class="grid">
      <% prods.map((item) => { %>

      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= item.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= item.imageUrl %>" alt="A Book">
        </div>
        <div class="card__content">
          <h2 class="product__price">$<%= item.price %></h2>
          <p class="product__description"><%= item.description %></p>
        </div>
        <div class="card__actions">
          <a href="/admin/edit-product/<%= item.id %>?edit=true" class="btn">Edit</a>
          <form action="/admin/delete-product" method="POST">
            <input type="hidden" value="<%=item.id%>" name="productId">
            <button class="btn" type="submit">Delete</button>
          </form>
        </div>
      </article>

      <% }) %>
    </div>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>